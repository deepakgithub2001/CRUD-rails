<h1><%= @book.title %></h1>
<p> <strong>Author: </strong><%= @book.body %> </p>
<% if @book.book_image.attached?%>
   <%= image_tag @book.book_image%>
<% else %>
   <p> No Image Uploaded </p>
<% end %>
<%= link_to "Edit", edit_book_path(@book) %>
<%= button_to "Delete", @book, method: :delete, data: { confirm: "Are you sure?" } %>
<p>
  <%= link_to "Back to Books List", books_path %>
</p> 