<h1> Edit Book</h1>

<%= form_with model: @book, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :body %><br>
    <%= form.text_field :body %>
  </p>

  <%= form.submit "Update Book" %>
  <% end %>

<%= link_to "Back", books_path %>
